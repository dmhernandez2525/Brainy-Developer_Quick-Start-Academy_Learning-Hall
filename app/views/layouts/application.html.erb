<!DOCTYPE html>
<html>
  <head>
    <title>LearningHall</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta 
      name="google-signin-client_id" 
      content="635001773138-m4b3dj9tvo0pvh9i4tgcq8grgu4pcer7.apps.googleusercontent.com">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    
    <script
     src="https://apis.google.com/js/platform.js" async defer>
    </script>


    <% if current_user %>
      <script>
        window.currentUser = {
        "id":<%= current_user.id %>,
        "username": "<%= current_user.username %>",
        "email": "<%= current_user.email %>",
        "preferred_name": "<%= current_user.preferred_name %>",
        "user_role": "<%= current_user.user_role %>",
        "pronunciation": "<%= current_user.pronunciation %>" 

        };
      </script>
      
    <% else %>
      
    <% end %>
    

  </head>

  <body>
    <%= yield %>
  </body>
</html>
